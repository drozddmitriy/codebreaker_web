!!!
%html.mdl-js{:lang => "en"}
  %body
    = render "header.html.haml"
    %section#introduction
      .container
        .row.fill-viewport.align-items-center.justify-content-center
          .col-12.col-md-6
            .row
              .col-md-auto
                %h1.text-white.title= I18n.t(:codebreaker)
            .row
              %p.lead.text-white-70
                = I18n.t(:mini_rules)
            %hr.mb-4/
            %form{:action => "/game", :method => "post"}
              .form-group
                %label.lead.label{:for => "player_name"}= I18n.t(:player_name)
                %input#player_name.form-control{:autofocus => "", :name => "player_name", :pattern => "^[\\w\\u0400-\\u04ff]{3,20}$", :placeholder => "Your name", :required => ""}/
              .form-group
                %label.lead.label{:for => "level"}= I18n.t(:game_level)
                %select.custom-select{:name => "level", :required => ""}
                  %option{:value => ""}= I18n.t(:choose_level)
                  %option{:value => "easy"}= I18n.t(:simple)
                  %option{:value => "medium"}= I18n.t(:middle)
                  %option{:value => "hell"}= I18n.t(:hard)
              %hr.mb-4/
              %button.btn.btn-primary.btn-lg{:type => "submit"}
                = I18n.t(:start_game)
              %span.float-right
                %a.btn.btn-warning.btn-lg{:href => "/rules", :role => "button"}= I18n.t(:rules)
                %a.btn.btn-success.btn-lg{:href => "/statistics", :role => "button"}= I18n.t(:statistics)
